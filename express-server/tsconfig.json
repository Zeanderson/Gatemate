    "target": "es2017",     
    "lib": ["esnext"],
    "allowJs": true,
    "strict": true,    
    "forceConsistentCasingInFileNames": true,    
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",                               
